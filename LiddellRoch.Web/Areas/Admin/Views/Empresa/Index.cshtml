@* @model List<Empresa> *@

<div class="container">
    <div class="border-0 my-4">
        <div class="m-lg-0 pt-3">
            <div class="row">
                <div class="col-12 text-start">
                    <h2 class="py-2">Lista de Empresas</h2>
                    <hr />
                </div>
            </div>
        </div>
        <div class="pb-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a asp-controller="Empresa" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Criar Empresa
                    </a>
                </div>

            </div>
            <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Endereço</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>Telefone</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/empresa.js"></script>
}