@model List<Categoria>

<div class="container">
    <div class="border-0 my-4">
        <div class="m-lg-0 pt-3">
            <div class="row">
                <div class="col-12 text-left">
                    <h2 class="py-2">Lista de Categorias</h2>
                    <hr />
                </div>
            </div>
        </div>
        <div class="pb-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a asp-controller="Categoria" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Criar categoria
                    </a>
                </div>

            </div>
            <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th class="text-center">Ordem de Exibição</th>
                        <th class="text-center">Data de Criação</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @* @foreach (var obj in Model /*.OrderBy(o => o.DisplayOrder)*/)
