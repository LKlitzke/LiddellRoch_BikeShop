@model Marca
<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">@(Model.Id != 0 ? "Atualizar" : "Criar") Marca</h2>
                </div>
            </div>
        </div>
        <div class="card-body py-4">
            <form method="post" class="row" enctype="multipart/form-data">
                <div class="border p-3 mt-4">
                    <div asp-validation-summary="All"></div>
                    <!--div asp-validation-summary="ModelOnly"></!--div!-->
                    <input asp-for="CriadoEm" hidden />
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Nome" class="form-control border-0 shadow" />
                        <label asp-for="Nome" type="text" class="ms-2"></label>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="PaisOrigem" class="form-control border-0 shadow" />
                        <label asp-for="PaisOrigem" type="text" class="ms-2">País de Origem</label>
                        <span asp-validation-for="PaisOrigem" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="SiteOficial" class="form-control border-0 shadow" />
                        <label asp-for="SiteOficial" type="text" class="ms-2">Site Oficial (URL)</label>
                        <span asp-validation-for="SiteOficial" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="IconUrl" class="form-control border-0 shadow" />
                        <label asp-for="IconUrl" type="text" class="ms-2">Diretório do Ícone</label>
                        <span asp-validation-for="IconUrl" class="text-danger"></span>
                    </div>
                    @* <div class="form-floating py-2 col-12">
                    <input type="file" name="arquivo" class="form-control border-0 shadow" />
                    <label asp-for="IconUrl" class="ms-2"></label>
                    </div> *@
                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Atualizar</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Criar</button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Marca" asp-action="Index" class="btn btn-secondary border form-control">
                                Voltar à listagem
                            </a>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}