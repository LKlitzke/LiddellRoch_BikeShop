@model Marca

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Excluir Marca</h2>
                </div>
            </div>
        </div>
        <div class="card-body py-4">
            <form method="post">
                <input asp-for="Id" hidden />
                <div class="border p-3 mt-4">
                    <div asp-validation-summary="All"></div>
                    <!--div asp-validation-summary="ModelOnly"></!--div!-->
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Nome" disabled class="form-control border-0 shadow" />
                        <label asp-for="Nome" type="text" class="ms-2"></label>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="PaisOrigem" disabled class="form-control border-0 shadow" />
                        <label asp-for="PaisOrigem" type="text" class="ms-2"></label>
                        <span asp-validation-for="PaisOrigem" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="SiteOficial" disabled class="form-control border-0 shadow" />
                        <label asp-for="SiteOficial" type="text" class="ms-2"></label>
                        <span asp-validation-for="SiteOficial" class="text-danger"></span>
                    </div>


                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger form-control">Excluir</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Marca" asp-action="Index" class="btn btn-secondary border form-control">
                                Voltar à listagem
                            </a>
                        </div>

                    </div>


                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}