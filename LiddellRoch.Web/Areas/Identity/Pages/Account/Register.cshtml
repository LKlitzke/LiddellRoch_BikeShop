@page
@model RegisterModel

@* <div class="container">
    <main role="main" class="pb-3"> *@
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                @if (User.IsInRole(SD.Role_Administrador))
                {
                    <h2 class="py-2 text-white">Registrar - ADMIN PORTAL</h2>
                }
                else
                {
                    <h2 class="py-2 text-white">Registrar</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Criar uma nova conta local</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 col-md-12">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="ms-2 text-muted">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Nome" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Nome" class="ms-2 text-muted">Nome completo</label>
                        <span asp-validation-for="Input.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Telefone" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Telefone" class="ms-2 text-muted">Telefone</label>
                        <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="ms-2 text-muted">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Confirme sua senha</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Endereco" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Endereco" class="ms-2 text-muted">Endereço</label>
                        <span asp-validation-for="Input.Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Cidade" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Cidade" class="ms-2 text-muted">Cidade</label>
                        <span asp-validation-for="Input.Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.Estado" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Estado" class="ms-2 text-muted">Estado</label>
                        <span asp-validation-for="Input.Estado" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="Input.CodigoPostal" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.CodigoPostal" class="ms-2 text-muted">CEP</label>
                        <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
                    </div>
                    @if (User.IsInRole(SD.Role_Administrador))
                    {
                        <div class="form-floating mb-3 col-md-6">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option disabled selected>-Selecione Role-</option>
                            </select>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <select asp-for="Input.EmpresaId" style="display:none;" asp-items="@Model.Input.EmpresaList" class="form-select">
                                <option disabled selected>-Selecione Empresa-</option>
                            </select>
                        </div>
                    }
                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Registrar</button>
                    </div>
                </form>
            </div>
            @if (!User.IsInRole(SD.Role_Administrador))
            {
                <div class="col-md-12 p-3 text-center">
                    <section>
                        <p class="divider-text d-flex pt-3">OU</p>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p class="text-center">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                @switch (provider.Name)
                                                {
                                                    case "Facebook":
                                                        <button id="fbBtn" type="submit" class="btn btn-primary bg-gradient" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="background-color: #0866ff"><i class="bi bi-facebook"></i>&nbsp; Facebook</button>
                                                        break;

                                                    case "Microsoft":
                                                        <button id="msBtn" type="submit" class="btn btn-primary bg-gradient" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="background-color: #1F1F1F"><i class="bi bi-microsoft"></i>&nbsp; Microsoft</button>
                                                        break;
                                                    default:
                                                        <button type="submit" class="btn btn-primary bg-gradient" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                        break;
                                                }
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
            }
        </div>
    </div>
</div>
@*     </main>
</div> *@
<style>
    #fbBtn:hover {
        background-color: #5294ff !important;
    }

    #msBtn:hover {
        background-color: #5c5c5c !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Input_Role').change(function () {
                var selection = $('#Input_Role Option:Selected').text();
                if (selection == 'Empresa') {
                    $('#Input_EmpresaId').show();
                }
                else {
                    $('#Input_EmpresaId').hide();
                }
            })
        })
    </script>
}
   