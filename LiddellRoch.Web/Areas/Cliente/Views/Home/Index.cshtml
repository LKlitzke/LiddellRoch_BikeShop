<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2 h-100">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded" style="height:100%">
                        @if (product.ImagensProduto != null && product.ImagensProduto.Count() > 0)
                        {
                            <img src="@product.ImagensProduto.FirstOrDefault().ImagemUrl" class="card-img-top rounded" />
                        }
                        else
                        {
                            <img src="@("https://source.unsplash.com/random/500x600?sig=" + product.Id)" class="card-img-top rounded" />
                        }

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Nome</p>
                                <p class="card-title text-warning text-center">por <b>@product.Marca.Nome</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Preço:
                                    <span class="text-decoration-line-through">
                                        @product.Preco.ToString("c")
                                    </span>
                                </p>
                            </div>@* 
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    Preço no PIX:
                                    <span>
                                        @product.Price100.ToString("c")
                                    </span>
                                </p>
                            </div> *@
                        </div>
                        <div>
                            @* productId DEVE ter o mesmo nome na assinatura do método Details *@
                            <a asp-action="Detalhes"
                               asp-route-bikeId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
